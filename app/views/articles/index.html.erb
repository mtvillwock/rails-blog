<h1>My Articles</h1>
<%= link_to 'Make a new article', new_article_path %>

<div class="article-list">
  <% unless @articles.nil? %>
  <% @articles.each do |article| %>
  <div class="article">
    <p class="article-title">
      <%= article.title %>
    </p>
    <p class="article-text">
      <%= article.text %>
    </p>
  </div>
  <% end %>
  <% end %>
</div>